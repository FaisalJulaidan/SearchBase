{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "new block schema",
  "type": "object",
  "properties": {
    "block": {
      "type": "object",
      "properties": {
        "type": { "enum": [ "Question", "User Input", "File Upload", "Solutions"] },
        "groupID": {"type": "integer"},

        "dataType": {"type": "object",
          "properties": {
            "name": {"enum": ["No Type", "Email", "Name", "Telephone", "Linkdin URL",
              "Degree", "Gender", "Resume", "Contact Time", "Availability", "Current Salary", "Desired Salary", "Desired Position", "Desired Position Years Exp", "Top Skills", "Top Skills Years Exp", "Desired Location", "Desired Employment Type", "Desired Hourly Rate"
            , "Location", "NearbyStation", "Offering Salary", "Offering Employment Type", "Desired Skills"]},
            "validation": {"enum": ["Ignore", "Email", "Telephone", "Name", "Number", "URL"]}
          },

          "required": ["name", "validation"],
          "additionalProperties": true
        },
        "storeInDB": { "type": "boolean" },
        "isSkippable": { "type": "boolean" },
        "content": { "type": "object" }
      },
      "required": ["type","groupID", "dataType", "storeInDB", "content"],
      "additionalProperties": false
    }
  },
  "required": ["block"],
  "additionalProperties": false
}