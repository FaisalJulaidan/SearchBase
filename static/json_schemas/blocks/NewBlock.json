{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "new block schema",
  "type": "object",
  "properties": {
    "block": {
      "type": "object",
      "properties": {
        "type": { "enum": [ "Question", "User Input", "File Upload", "Solutions"] },
        "groupID": {"type": "integer"},

        "dataType": {"type": "object",
          "properties": {
            "name": {"enum": ["No Type", "Name", "Email", "Telephone", "Linkdin URL",
              "Gender", "Degree", "Resume", "Contact Time", "Availability", "Current Salary", "Current Role", "Desired Salary", "Desired Position", "Candidate Skills", "Years Exp", "Preferred Location", "Preferred Employment Type", "Desired Hourly Rate",
              "Location", "NearbyStation", "Job Salary Offered", "Employment Type Offered", "Essential Skills", "Essential Years Exp", "Contract Rate",  "Job Description", "Job Availability", "Job Candidates Needed"]},
            "validation": {"enum": ["Ignore", "Email", "Telephone", "Name", "Number", "URL"]}
          },

          "required": ["name", "validation"],
          "additionalProperties": true
        },
        "storeInDB": { "type": "boolean" },
        "isSkippable": { "type": "boolean" },
        "content": { "type": "object" }
      },
      "required": ["type","groupID", "dataType", "storeInDB", "content"],
      "additionalProperties": false
    }
  },
  "required": ["block"],
  "additionalProperties": false
}