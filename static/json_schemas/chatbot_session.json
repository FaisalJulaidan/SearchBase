{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "chatbot session schema",
  "type": "object",
  "properties": {
    "collectedInformation": {"type": "array", "items": {
      "type": "object",
      "properties":{
        "blockID": {"type": "integer"},
        "questionText": {"type": "string"},
        "input": {"type": "string"},
        "keywords": {"type": ["array","string"], "items": {"type": ["string"]}}
        },
      "required": ["blockID", "questionText", "input", "keywords"],
      "additionalProperties": false
      }
    },
    "keywords": {"type": ["array","string"], "items": {"type": ["string"]}},
    "showTop": {"type": "integer"},
    "solutionsReturned": {"type": "integer"}
  },
  "required": ["collectedInformation", "keywords", "showTop", "solutionsReturned"],
  "additionalProperties": false
}
