{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "flow schema",
  "type": "object",
  "properties": {
    "blocks": {"type": "array", "items": {
      "type": "object",
      "properties":{
        "id": {"type": "integer"},
        "groupID": {"type": "integer"},
        "dataType": {"type": "object",
          "properties": {
            "name": {"enum": ["No Type", "Email", "Full Name", "Telephone", "Contact Time", "Desired Salary", "Availability", "Desired Position", "Desired Position Years Exp", "Top Skill", "Top Skill Years Exp", "Resume", "Linkdin URL", "Desired Location", "Employment Type", "Desired Hourly Rate"]},
            "validation": {"enum": ["Ignore", "Email", "Telephone", "Name", "Number", "URL"]}
          },
          "required": ["name", "validation"],
          "additionalProperties": true
        },
        "type": {"enum": ["Question", "User Input", "File Upload", "Solutions", "End Chat"]},
        "order": {"type": "integer", "minimum": 1},
        "storeInDB": {"type": "boolean"},
        "isSkippable": { "type": "boolean" },
        "content": {"type": "object"}
      },
      "required": ["id", "groupID", "dataType", "type", "order", "storeInDB", "isSkippable", "content"],
      "additionalProperties": false
      }
    }
  },
  "required": ["blocks"],
  "additionalProperties": false
}
