{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "title": "flow schema",
  "type": "object",
  "properties": {
    "blocks": {"type": "array", "items": {
      "type": "object",
      "properties":{
        "id": {"type": "integer"},
        "groupID": {"type": "integer"},
        "dataCategoryID": {"type": ["integer", "null"]},
        "type": {"enum": ["Question", "User Input", "File Upload", "Solutions", "End Chat"]},
        "order": {"type": "integer", "minimum": 1},
        "storeInDB": {"type": "boolean"},
        "isSkippable": { "type": "boolean" },
        "content": {"type": "object"}
      },
      "required": ["id", "groupID", "dataCategoryID", "type", "order", "storeInDB", "isSkippable", "content"],
      "additionalProperties": false
      }
    }
  },
  "required": ["blocks"],
  "additionalProperties": false
}
